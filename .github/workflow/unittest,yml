name: Python Testing App

on:
  push:
    branches:["main"]
  pull_request:
    branches:["main"]

jobs:
  test:
    runs-on: ubuntu-lastest  # Runs on ubuntu OS

    steps:
    - name: Setup for Checkout-V4
      uses: actions/checkout@v4
    
    - name: Setup Python
      uses: actions/setup-python@v5
      with:
        python-version: '3.13'
    
    - name: Install Dependences
      run: |
        python -m pip install --upgrade pip
        pip install uv
        uv venv
        uv add -r ./requirements.txt
      
    - name: Run Tests
      run: pytest
